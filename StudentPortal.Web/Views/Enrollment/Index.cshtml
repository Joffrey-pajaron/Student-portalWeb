@{
    ViewData["Title"] = "Enrollments";
}

<div class="container mt-4">
    <h2>Student Enrollment</h2>

    <div class="row mb-3">
        <!-- Student ID with Search button -->
        <div class="col-md-4">
            <label for="studentIdInput" class="form-label">Enter Student ID:</label>
            <div class="input-group">
                <input type="number" id="studentIdInput" class="form-control" placeholder="e.g. 1" />
                <button id="searchStudentBtn" class="btn btn-primary" type="button" onclick="searchStudent()">Search</button>
            </div>
        </div>

        <!-- Student Name -->
        <div class="col-md-4">
            <label for="studentNameInput" class="form-label">Student Name:</label>
            <input type="text" id="studentNameInput" class="form-control" value="" readonly />
        </div>
    </div>


   
 

    <!-- Enrollment Form -->
    <div id="enrollmentForm" style="display:none;">
        <label>Select Course:</label>
        <select id="courseSelect" class="form-control"></select>
        <button class="btn btn-success mt-2" onclick="enrollStudent()">Enroll</button>
    </div>

    <!-- Student Courses -->
    <h4 class="mt-4">Enrolled Courses</h4>
    <table class="table table-bordered" id="coursesTable">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script>
        let currentStudentId = 0;

        function searchStudent() {
            let id = $("#studentIdInput").val();
            $.get(`/Enrollment/GetStudent?id=${id}`, function (res) {
                if (res.success === 1) {
                    currentStudentId = res.data.id;
                   $("#studentNameInput").val(`${res.data.firstName} ${res.data.lastName}`);
                    $("#enrollmentForm").show();

                    loadCourses();
                    loadStudentCourses();
                } else {
                    alert(res.message);
                }
            });
        }

        function loadCourses() {
            $.get(`/Courses/GetCourses`, function (res) {
                if (res.success === 1) {
                    let select = $("#courseSelect");
                    select.empty();
                    res.data.forEach(c => {
                        select.append(`<option value="${c.id}">${c.courseName}</option>`);
                    });
                }
            });
        }
                function dropCourse(enrollmentId) {
            if (!confirm("Are you sure you want to drop this course?")) return;

            $.ajax({
                url: "/Enrollment/Drop",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ EnrollmentId: enrollmentId }), // Capital E
                success: function (res) {
                    if (res.success) {
                        alert("Course dropped successfully!");
                        loadStudentCourses();
                    } else {
                        alert("Failed to drop course.");
                    }
                }
            });
        }



          function loadStudentCourses() {
            $.get(`/Enrollment/GetStudentCourses?studentId=${currentStudentId}`, function (res) {
                let tbody = $("#coursesTable tbody");
                tbody.empty();

                if (res.success === 1 && res.data && res.data.length > 0) {
                    res.data.forEach(c => {
                        tbody.append(`
                            <tr data-id="${c.EnrollmentId}">
                                <td>${c.CourseName}</td>
                                <td>${c.Description}</td>
                                <td>
                                    <button class="btn btn-danger btn-sm" onclick="dropCourse('${c.EnrollmentId}')">
                                        Remove
                                    </button>
                                </td>
                            </tr>
                        `);
                    });
                } else {
                    tbody.append(`<tr><td colspan="3" class="text-center text-muted">No courses found</td></tr>`);
                }
            });
        }


        

      


        function enrollStudent() {
            let courseId = $("#courseSelect").val();
            $.ajax({
                url: "/Enrollment/Enroll",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ studentId: currentStudentId, courseId: courseId }),
                success: function (res) {
                    if (res.success === 1) {    
                        alert("Enrolled successfully!");
                        loadStudentCourses();
                    }
                }
            });
        }
    </script>
}
