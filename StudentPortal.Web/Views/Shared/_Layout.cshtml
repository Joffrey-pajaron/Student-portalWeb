@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using System.Security.Claims

@{
    var user = HttpContextAccessor.HttpContext?.User;
    var roleClaim = user?.FindFirst(ClaimTypes.Role)?.Value ?? "";

    // Detect if current page is Login/Register
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    bool hideSidebarPage = controller == "Account" && (action == "Login" || action == "Register");

    // Show sidebar only if user is authenticated and has a role
    bool showSidebar = user?.Identity != null
                       && user.Identity.IsAuthenticated
                       && !string.IsNullOrEmpty(roleClaim)
                       && !hideSidebarPage;

    // Show header only if sidebar is visible
    bool showHeader = showSidebar;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentPortal.Web</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        /* Sidebar */
        .sidebar {
            width: 220px;
            background-color: #dc3545;
            color: white;
            padding-top: 60px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            overflow-y: auto;
            z-index: 1000;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 12px 20px;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #b52a3a;
                }

        /* Header */
        header {
            position: fixed;
            top: 0;
            left: @(showSidebar ? "220px" : "0");
            right: 0;
            height: 60px;
            background-color: #fff;
            border-bottom: 1px solid #b52a3a;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
            z-index: 1030;
        }

            header h5 {
                margin: 0;
            }

            header .header-links a {
                margin-left: 10px;
            }

        /* Content area */
        .content {
            margin-left: @(showSidebar ? "220px" : "0");
            padding-top: 80px; /* space for fixed header */
            padding-left: 20px;
            padding-right: 20px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .sidebar

        {
            width: 100%;
            height: auto;
            position: relative;
        }

        .content {
            margin-left: 0;
            padding-top: 140px; /* extra space if header stacks */
        }

        header {
            left: 0 !important;
        }

        }
    </style>
</head>
<body>
    @if (showSidebar)
    {
        <div class="sidebar">
            <h4 class="text-center mt-3">Portal</h4>

            @if (roleClaim == "Admin")
            {
                <a asp-controller="Home" asp-action="Index">Dashboard</a>
                <a class="dropdown-item" asp-controller="Users" asp-action="Index">Manage Users</a>
                <a asp-controller="Courses" asp-action="Index">Courses</a>
                <a asp-controller="Instructor" asp-action="Index">Instructors</a>
                <a asp-controller="Enrollment" asp-action="Index">Enrollments</a>
                <a asp-controller="Grades" asp-action="Index">Grades</a>
            }

            @if (roleClaim == "Teacher")
            {
                <a asp-controller="Home" asp-action="Index">Dashboard</a>
                <a asp-controller="Courses" asp-action="Index">My Courses</a>
                <a asp-controller="Subjects" asp-action="Index">Subjects</a>
                <a asp-controller="Grades" asp-action="Index">Grades</a>
            }

            @if (roleClaim == "Student")
            {
                <a asp-controller="Home" asp-action="Index">Dashboard</a>
                <a asp-controller="Subjects" asp-action="Index">Subjects</a>
                <a asp-controller="Grades" asp-action="Index">My Grades</a>
                <a asp-controller="Enrollment" asp-action="Index">Enrollments</a>
            }
        </div>
    }

    @if (showHeader)
    {
        <header class="d-flex justify-content-between align-items-center px-3">
            <h5 class="mb-0">@ViewData["Title"]</h5>

            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="~/images/642902-200.png" alt="User Avatar" width="35" height="35" class="rounded-circle me-2">
                    <span>@user.Identity.Name</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuButton">
                    @if (roleClaim == "Admin")
                    {
                        <li>                      
                        </li>
                    }
                    <li>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </header>
    }



    <div class="content">
        <main>
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
