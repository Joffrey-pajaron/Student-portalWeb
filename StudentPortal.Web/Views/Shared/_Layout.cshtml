@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentPortal.Web</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />

    <!-- Site-specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            min-height: 100vh;
            margin: 0;
        }

        .sidebar {
            width: 220px;
            background-color: #dc3545; /* Bootstrap danger red */
            color: white;
            flex-shrink: 0;
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            bottom: 0;
            padding-top: 60px;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.3); /* shadow on right side */
            z-index: 1000; /* ensure it stays above main content */
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 12px 20px;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #b52a3a;
                }

        .content {
            margin-left: 220px; /* same as sidebar width */
            flex-grow: 1;
            padding: 20px;
        }

        header {
            position: fixed;
            top: 0;
            left: 220px;
            right: 0;
            height: 60px;
            background-color: #fff;
            border-bottom: 1px solid #b52a3a;
            display: flex;
            align-items: center;
            padding: 0 20px;
            z-index: 1000;
        }

        main {
            padding-top: 80px; /* space for header */
        }
    </style>
</head>
<body>
    @if (HttpContextAccessor.HttpContext.Session.GetInt32("UserId") != null)
    {
        <!-- Sidebar -->
        <div class="sidebar">
            <h4 class="text-center mt-3">Portal</h4>
            <a asp-controller="Home" asp-action="Index">Dashboard</a>
            <a asp-controller="Students" asp-action="List">Students</a>
            <a asp-controller="Courses" asp-action="Index">Courses</a>
            <a asp-controller="Instructor" asp-action="Index">Instructors</a>
            <a asp-controller="Enrollment" asp-action="Index">Enrollment</a>
            <a asp-controller="Account" asp-action="Logout">Logout</a>
        </div>

        <!-- Header -->
        <header>
            <h5 class="mb-0">@ViewData["Title"]</h5>
        </header>

        <!-- Main Content -->
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <!-- For login/unauthenticated pages -->
        <div class="container mt-5">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
